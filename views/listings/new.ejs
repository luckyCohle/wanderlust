<% layout("/layouts/boilerplate") %>
<body>
    <h2>Create a new listing</h2>
<div class="row">
    <div class="col-8 offset-2">
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" class="form-control" placeholder="enter title" required>
            <div class="valid-feedback">title looks good</div>
            <div class="invalid-feedback">enter a valid title</div>
        </div>
        <br><br>
       <div>
        <label for="description" class="form-label"  >Description </label>
        <textarea name="listing[description]"  cols="10" rows="5"  class="form-control" placeholder="description" required></textarea>
        <div class="invalid-feedback">enter a short description</div>
       </div>
        <br><br>
        <div class="row">
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]"   class="form-control" placeholder="enter price" required>
                <div class="invalid-feedback">enter a valid price</div>
               </div>
               <div class="col-md-8">
                <label for="country" class="form-label">country</label>
                <input name="listing[country]" type="text" required class="form-control" placeholder="enter country name">
                <div class="invalid-feedback">enter a valid country name</div>
            </div>
        </div>
       
        <br><br>
        <div>
            <label for="image" class="form-label">Uplode the listing image</label>
            <input name="listing[image]" type="file" class="form-control" >
        </div>
        <br><br>
        <div>
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" type="text"  class="form-control" placeholder="enter location" required>
            <div class="invalid-feedback">enter a valid location</div>
        </div>
        <br><br>
        
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
    </div>
</div>
</body>
